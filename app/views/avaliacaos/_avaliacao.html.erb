
  <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modal-<%= avaliacao.titulo.parameterize %>-1">
		<%= avaliacao.titulo %>
  </button>

  <% index2 = 1 %>
  <% avaliacao.questaos.each do |questao| %>






  <!-- Modal Page index-->
  <div class="modal fade" id="modal-<%= avaliacao.titulo.parameterize %>-<%= index2 %>" tabindex2="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel"> <%= questao.questao %> </h4>
          </div>
          <div class="modal-body">
          <div align="justify">
          </div>
          <br>
          <center>
          			<%= render 'prova_alunos/form' %>
          
          
 
          
            
          
        

					
              <% questao.alternativas.each do |alternativa| %>
                      

                <form action="">

                  Resposta certa: <div class="certa" id="certa" ><%= questao.respostacerta %></div> <br><br>
                  Número Questão: <div class="questao" id="questao" ><%= questao.id %></div> <br><br>


  							  <%= alternativa.opcao1 %><input type="radio" name="resp1" value=<%= alternativa.opcao1 %>> <br>
  							  <%= alternativa.opcao2 %><input type="radio" name="resp1" value=<%= alternativa.opcao2 %>> <br>
  							  <%= alternativa.opcao3 %><input type="radio" name="resp1" value=<%= alternativa.opcao3 %>> <br>
  							  <%= alternativa.opcao4 %><input type="radio" name="resp1" value=<%= alternativa.opcao4 %>> <br>
  							  <br>
  							  <button id= "botao" onclick="salvaresposta('<%= questao.respostacerta %>', '<%= questao.id %>')"> ENVIAR RESPOSTA</button>   

                </form>
							   	  
						<% end %>

          </center>
          </div>
          <div class="modal-footer">
          
            <% if index2 != avaliacao.questaos.size %>
              <button type="button" class="btn btn-default btn-next" data-toggle="modal" data-target="#modal-<%= avaliacao.titulo.parameterize %>-<%= index2 + 1 %>" onclick="closenext()" data-dismiss="modal" >Next => </button>
            <% end %>

             <%= label_tag :tempo, class: "form-control", id: "cronometro" do %>
               <span id="counter">00:00:00</span>
             <% end %>

             <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
          </div>

        </div>
      </div>
    </div>



    <% index2 += 1 %>
  <% end %>


<br><br>

</center>

